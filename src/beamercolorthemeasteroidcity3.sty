\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=red}

% Headline
\setbeamercolor{headline}{fg=blue,bg=gray}
\setbeamercolor{headline rule}{bg=orange}

% Block
\setbeamercolor{block title}{fg=orange,bg=white}
\setbeamercolor{block separator}{bg=blue}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=blue,bg=gray}
\setbeamercolor{block alerted separator}{bg=orange}
